<?xml version="1.0" encoding="utf-8"?>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blanco">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="274dp"
        android:layout_height="92dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_calculate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blue_background">

        <EditText
            android:id="@+id/etSueldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su sueldo"
            android:inputType="numberDecimal"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blue_background">

        <EditText
            android:id="@+id/etSueldoBasico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el sueldo básico"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blue_background">

        <EditText
            android:id="@+id/etMesesTrabajados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese los meses trabajados"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blue_background">

        <RadioGroup
            android:id="@+id/rgSector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPrivado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sector Privado" />

            <RadioButton
                android:id="@+id/rbPublico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sector Público" />

        </RadioGroup>

    </LinearLayout>



    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:backgroundTint="#4FC355"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#88DAAF67"/>

</LinearLayout>
